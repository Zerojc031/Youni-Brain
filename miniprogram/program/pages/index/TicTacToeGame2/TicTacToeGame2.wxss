/* pages/game/game.wxss */
.userinfo-avatar{
  width: 80rpx;
  height: 80rpx;
}
.block{
  padding:10px 0px;
  background: none;
  outline-color: none;
  border-radius: 0px;
}
.tip{
  font-size: 15px;
  color: rgb(180, 175, 175);
  padding: 10px 15px;
  text-align: center;
}
.chess-board {
  display:flex;
  flex-direction: column;
  float: left;
  padding: 1.666%;
}
/** 棋盘的每一行 */
.chess-board .row {
  display: flex;
  flex-direction: row;
  height:100%;
}
/** 棋盘的每一个格 */
.chess-board .cell {
  border-top:5px solid #acd4f5;
  border-left:5px solid #acd4f5;
  flex:1;
}
.chess-board .row .cell:first-child {
  border-left: 0px solid #b8e6f8;
}
/** 第一行的每一个格子 */
.chess-board .row:first-child .cell {
  border-top:0px solid #ff774e;
}
.exit{
  margin:0rpx 25rpx;
  left:60rpx;
  float:left;
  width: 180rpx;
  font-size: 28rpx;
  vertical-align: center;
  background-color: rgb(248, 233, 147);
}
.container-game{
  height: 160rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0;
  box-sizing: border-box;
}
/* pk图标 */
.pk{
  height: 80rpx;
  width: 80rpx;
  /* 绝对定位 */
  position:absolute;
  /* 绝对定位坐标，以左上角为原始点*/
  left:335rpx;
  top:20rpx;
}
/* 对方头像，左 */
.userinfo-avatar-left {
  width: 80rpx;
  height: 80rpx;
  position:absolute;
  left:130rpx;
  top:20rpx;
  border-radius: 0%;
}
/* 本人头像，右 */
.userinfo-avatar-right {
  width: 80rpx;
  height: 80rpx;
  /* float: right; */
  position:absolute;
  left:540rpx;
  top:20rpx;
  border-radius: 0%;
}
.text{
  width:335rpx;
  text-align: center;
  position: absolute;
  float:left;
  top:110rpx;
  background: none;
  font-size: 30rpx;
  border: 0px solid seashell;
}
.text.left{
  left:0rpx;
}
.text.right{
  left:415rpx;
}
.section{
  float:left;
  width:675rpx;
  margin: 37.5rpx;
  padding: 10rpx;
  border: 3rpx solid rgb(95, 120, 141);
}
.check{
  float:left;
  width: 150rpx;
  font-size: 25rpx;
  vertical-align: center;
  background-color: rgb(248, 233, 147);
}