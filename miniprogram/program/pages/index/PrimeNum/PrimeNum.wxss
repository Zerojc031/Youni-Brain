/* pages/PrimeNum/PrimeNum.wxss */
.number{
  color:rgb(63, 160, 184);
  font-size: 100rpx;
  text-align: center;
  background: none;
}
.begin{
  font-size: 40rpx;
  color:rgb(85, 94, 88);
  background-color:gold;
  text-align: center;
  float: left;
  width:60%;
  left:20%;
  top:8cm;
  border-radius: 16rpx;
  box-shadow: 0 16rpx 32rpx 0 rgba(0,0,0,0.2), 0 3px 10px 0 rgba(0,0,0,0.19);
}
.begin.first{
  top:5cm;
}
.begin.result{
  top:3.5cm;
}
.begin.rank{
  top:5.5cm;
}
.pass{
  font-size: 26rpx;
  color:rgb(145, 143, 168);
}
.text{
  color:rgb(145, 143, 168);
  font-size: 26rpx;
  text-align: center;
  border: none;
  float: left;
  width:50%;
  left:25%;
  background: none;
  top:3cm;
}
.text.back{
  top:460rpx;
  left:-25%;
}
.button{
  color:rgb(10, 10, 10);
  background-color:gold;
  width:30%;
  top:2cm;
  font-size:35px;
  text-align: center;
  font-weight:bolder;
  border: none;
  float:left;
  padding: 20rpx 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 16rpx 32rpx 0 rgba(0,0,0,0.2), 0 12rpx 40rpx 0 rgba(0,0,0,0.19);
}
.button.wrong{
  position: relative;
  left:25%;
}
.button.right{
  position: relative;
  left:15%;
}
.section{
  float:left;
  width:60%;
  left:20%;
} 